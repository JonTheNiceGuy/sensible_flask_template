<!DOCTYPE html>
<html>
    <head>
        <title>{{ page_title | default('Base Page') }}</title>
        <link rel="stylesheet" href="/static/main.css">
    </head>
    <body>
{%- with messages = get_flashed_messages() %}
{%- if messages %}
{%- for message in messages %}
        <div class="notification">
            {{ message }}
        </div>
{% endfor -%}
{%- endif %}
{%- endwith %}
        <div class="body">
            {% block content %}
            {% endblock %}
        </div>
    </body>
</html>